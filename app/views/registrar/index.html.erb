<div class="row">
  <div class="col-12 align-bottom">
    <h1>Registar Homepage for season <%= @selected_season %></h1>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <h1><%= @status.capitalize %> Items</h1>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="row">
      <div class="col-2">
        <%= link_to 'All Field Finds', registrar_index_path(status: 'all') %>
      </div>
      <div class="col-2">
        <%= link_to 'Unregistered', registrar_index_path(status: 'unregistered') %>
      </div>
      <div class="col-2">
        <%= link_to 'Initial Registration', registrar_index_path(status: 'initial') %>
      </div>
      <div class="col-2">
        <%= link_to 'Work in Progress', registrar_index_path(status: 'wip') %>
      </div>
      <div class="col-2">
        <%= link_to 'Completed', registrar_index_path(status: 'completed') %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-4">
    <h2>Information</h2>
  </div>
  <div class="col-2">
    <h2>Reg Number</h2>
  </div>
  <div class="col-1">
    <h2>Type</h2>
  </div>
  <div class="col-5">
    <h2>Remarks</h2>
  </div>
</div>

<% @finds.each do |find| %>
<div class="row">
  <div class="col-4">
    <%= link_to "Locus: #{find.locus}, Pail: #{find.pail_number}, Field number: #{find.field_number}", registrar_path(id: find.id, pail_id: find.pail_number, item_type: find.type, item_number: find.field_number, item_locus_code: find.locus) %>
  </div>
  <div class="col-2">
      <%= find.registration_number %>
  </div>
  <div class="col-1">
      <%= find.type %>
  </div>
  <div class="col-5">
    <%= find.remarks %>
  </div>
</div>
<% end %>