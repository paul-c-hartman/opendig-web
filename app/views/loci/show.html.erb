<div class="container">
  <div class="row">
    <div class="col-10 align-bottom">
      <h1>Locus <%= @area %>.<%= @square %>.<%= @locus_code %></h1>
    </div>
    <div class="col-2 align-bottom">
      <%= link_to "Edit", edit_area_square_locus_path(@area, @square, @locus_code), class: "btn btn-primary float-right" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to 'Home', root_path %></li>
          <li class="breadcrumb-item"><%= link_to "Area #{@area}", area_squares_path(@area) %></li>
          <li class="breadcrumb-item"><%= link_to "Square #{@square}", area_square_loci_path(@area, @square) %></li>
          <li class="breadcrumb-item active" aria-current="page">Locus <%= @area %>.<%= @square %>.<%= @locus_code %></li>
        </ol>
      </nav>
    </div>
  </div>
  <%= render 'general' %>
  <%= render 'interpretation' %>
  <%= render 'description' %>
  <%= render 'supplements' if @locus["supplements"] %>
  <%= render 'levels' if @locus["levels"] %>
  <%= render 'stratigraphy' if @locus["stratigraphies"] %>
  <%= render 'photos' if @locus["photos"] %>
  <%= render 'pottery' if @locus["pottery"] %>
  <%= render 'pails' if @locus["pails"] %>
  <%#= render 'objects' %>
</div>